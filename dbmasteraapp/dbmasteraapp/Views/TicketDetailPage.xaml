<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dbmasteraapp.Views.TicketDetailPage"
             Title="Ticket Detail">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Validação Cliente" BackgroundColor="Purple" TextColor="White"/>
            <Label Text="Title of ticket" TextColor="DarkRed"/>
            <Label Text="{Binding Title}"/>
            <Label Text="Ticket data" TextColor="DarkRed"/>
            <Label Text="{Binding Id, StringFormat='Code: {0}'}"/>
            <Label Text="{Binding DateInclusion, StringFormat='Date inclusion: {0:dd/MM/yyyy HH:mm}'}"/>
            <Label Text="{Binding DateChange, StringFormat='Date change: {0:dd/MM/yyyy HH:mm}'}"/>
            <Label Text="{Binding Category, StringFormat='Category: {0}'}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>